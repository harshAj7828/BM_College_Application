<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.about.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/college_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_220"
            android:layout_marginTop="@dimen/dim_30"
            android:scaleType="fitXY"
            android:src="@drawable/image01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="@dimen/dim_15"
            android:layout_marginTop="@dimen/dim_22"
            android:baselineAligned="false"
            android:text="@string/college"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_14" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dim_14"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dim_40"
                android:layout_height="@dimen/dim_40"
                android:layout_marginLeft="@dimen/dim_14"
                android:src="@drawable/ic_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campus"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dim_12"
                android:textSize="@dimen/dim_18"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dim_40"
                android:layout_height="@dimen/dim_40"
                android:layout_marginLeft="@dimen/dim_14"
                android:src="@drawable/ic_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Library"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dim_12"
                android:textSize="@dimen/dim_18"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dim_40"
                android:layout_height="@dimen/dim_40"
                android:layout_marginLeft="@dimen/dim_14"
                android:src="@drawable/ic_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Transport"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dim_12"
                android:textSize="@dimen/dim_18"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dim_40"
                android:layout_height="@dimen/dim_40"
                android:layout_marginLeft="@dimen/dim_14"
                android:src="@drawable/ic_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auditorium"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dim_12"
                android:textSize="@dimen/dim_18"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_10"
            android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/branch"
            android:layout_marginTop="@dimen/dim_30"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dim_10"
                app:cardElevation="@dimen/dim_10"
                app:cardBackgroundColor="#D2FFFFFF">



        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_150"
            android:foregroundGravity="center"
            android:clipToPadding="false"
            android:id="@+id/viewPager"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>